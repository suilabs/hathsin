{
  "name": "hathsin",
  "version": "1.0.0",
  "description": "Backend server for suilabs web",
  "main": "server",
  "scripts": {
    "test": "jest src/",
    "start:watch": "nodemon --exec npm run start:dev",
    "start:dev": "NODE_ENV=dev babel-node ./src/server.js",
    "start": "node build/server.js",
    "build:server": "NODE_ENV=production babel -d ./build ./src && mkdir -p ./build/docs && cp ./docs/* ./build/docs/*"
  },
  "keywords": [
    "server",
    "backend"
  ],
  "author": "ShakMR",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-transform-runtime": "^7.4.4",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/runtime": "^7.4.5",
    "babel-loader": "^8.0.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "eslint": "^4.19.1",
    "express": "^4.16.3",
    "graphql": "^0.11.7",
    "graphql-advanced-projection": "^1.0.2",
    "graphql-server-express": "^1.3.6",
    "graphql-tools": "^2.24.0",
    "mongoose": "^5.5.14",
    "sha1": "^1.1.1",
    "uuid": "^3.3.2",
    "v8flags": "^3.1.0",
    "webpack": "^3.12.0"
  },
  "devDependencies": {
    "@babel/node": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "jest": "^24.8.0",
    "type-detect": "^4.0.8"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
}
