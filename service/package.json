{
  "name": "hathsin",
  "version": "1.0.0",
  "description": "Backend server for suilabs web",
  "main": "server",
  "scripts": {
    "test": "jest src/",
    "start:watch": "nodemon --exec npm run start:dev",
    "start:dev": "NODE_ENV=dev babel-node ./src/server.js",
    "start": "node build/server.js",
    "build:server": "NODE_ENV=production babel -d ./build ./src && mkdir -p ./build/docs && cp ./docs/* ./build/docs/*"
  },
  "keywords": [
    "server",
    "backend"
  ],
  "author": "ShakMR",
  "license": "MIT",
  "dependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "eslint": "^4.19.1",
    "express": "^4.16.3",
    "graphql": "^0.11.7",
    "graphql-advanced-projection": "^1.0.2",
    "graphql-server-express": "^1.3.6",
    "graphql-tools": "^2.24.0",
    "mongoose": "^5.5.14",
    "sha1": "^1.1.1",
    "uuid": "^3.3.2",
    "v8flags": "^3.1.0",
    "webpack": "^3.12.0"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "type-detect": "^4.0.8"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
}
